<div id="managementContents">
	<div id="main">
		<h2>店舗編集 -<span id="shopName"><%= studioArea.name %></span>-</h2>
	    <div id="form">
	        <form action="/studio/edit/execute" method="POST" name="studioEdit">
				<input type="hidden" name="studioAreaId" value="<%= studioArea.id %>"></input>
				<h4>店舗名</h4>
				<input type="text" name="studioAreaName" value="<%= studioArea.name %>"></input>
				<h4>電話番号</h4>
				<input type="tel" name="tel" value="<%= studioArea.tel %>"></input>
				<h4>最寄駅</h4>
				<textarea name="studioStation" rows="4" cols="40"><%= studioArea.nearStation %></textarea>
				<h4>住所</h4>
				<textarea name="studioAddress" value="" rows="4" cols="40"><%= studioArea.address %></textarea>
				<h4>お支払い方法</h4>
				<textarea name="studioPayment" rows="4" cols="40"><%= studioArea.paymentMethod %></textarea>
				<h4>備考</h4>
				<textarea name="studioRemarks" rows="4" cols="40"><%= studioArea.remark %></textarea>	
			</form>
		    <!-- キャンセルボタン -->
		    <a class="remodal-cancel" href="/studio" data-remodal-action="cancel">戻る</a>
		    <!-- OKボタン -->
		    <a href="javascript:void(0)" class="execute_button" onclick="document.studioEdit.submit();return false;" class="remodal-confirm" data-remodal-action="confirm" style="display:inline-block">変更する</a>
		</div>
	</div>
</div>