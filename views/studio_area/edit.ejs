<div id="managementContents">
	<div id="main">
		<h2>スタジオ編集 -<span id="studioName"><%= studioAreaRoom.name %></span>-</h2>
	    <div id="form">
	        <form action="/studio_area/edit/execute" method="POST" name="studioAreaEdit">
				<input type="hidden" name="studioAreaRoomId" value="<%= studioAreaRoom.id %>"></input>
				<h4>スタジオ名</h4>
				<input type="text" name="name" value="<%= studioAreaRoom.name %>"></input>
				<h4>店舗：<%= studioArea.name %></h4>
				<h4>料金</h4>
				<textarea name="price" value="<%= studioAreaRoom.price %>" rows="4" cols="40"></textarea>
				<h4>間取り</h4>
				<textarea name="roomSize" value="<%= studioAreaRoom.roomSize %>" rows="4" cols="40"></textarea>
				<h4>写真</h4>
				<p><img id="picture"></p>
				<input type="file" name="room_image" accept="image/jpeg,image/png">
				<h4>備考</h4>
				<textarea name="explanation" value="<%= studioAreaRoom.explanation %>" rows="4" cols="40"></textarea>
			</form>
		    <!-- キャンセルボタン -->
		    <a class="remodal-cancel" href="/studio_area" data-remodal-action="cancel">戻る</a>
		    <!-- OKボタン -->
		    <a href="javascript:void(0)" onclick="document.studioAreaEdit.submit();return false;" class="remodal-confirm" data-remodal-action="confirm" style="display:inline-block">登録</a>
		</div>
	</div>
</div>