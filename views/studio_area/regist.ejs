<div id="contents">
	<div id="main">
		<h2>スタジオ登録</h2>
	    <div id="form">
	        <form action="/studio_area/regist/execute" method="POST" name="studioAreaRegist">
				<input type="hidden" name="studioAreaId" value="<%= studioArea.id %>"></input>
				<h4>スタジオ名</h4>
				<input type="text" name="name" value="101"></input>
				<h4>店舗：<%= studioArea.name %></h4>
				<h4>料金</h4>
				<textarea name="price" rows="4" cols="40"></textarea>
				<h4>間取り</h4>
				<textarea name="roomSize" rows="4" cols="40"></textarea>
				<h4>写真</h4>
				<p><img id="picture"></p>
				<input type="file" name="room_image" accept="image/jpeg,image/png">
				<h4>備考</h4>
				<textarea name="explanation" rows="4" cols="40"></textarea>
			</form>
		    <!-- キャンセルボタン -->
		    <a class="remodal-cancel" href="/studio_area" data-remodal-action="cancel">戻る</a>
		    <!-- OKボタン -->
		    <a href="javascript:void(0)" onclick="document.studioAreaRegist.submit();return false;" class="remodal-confirm" data-remodal-action="confirm" style="display:inline-block">登録</a>
		</div>
	</div>
</div>