<div id="managementContents">
	<div id="main">
		<h2>スタジオ登録</h2>
	    <div id="studioAreaRegistForm">
	        <form class="management_form" action="/studio_area/regist/execute" method="POST" name="studioAreaRegist">
				<input type="hidden" name="studioAreaId" value="<%= studioArea.id %>"></input>
				<h4>【店舗】：<%= studioArea.name %></h4>
				<h4>【スタジオ名】</h4>
				<p class="error hidden">スタジオ名は必須です</p>
				<input type="text" name="name" value=""></input>
				<h4>【広さ】</h4>
				<textarea name="roomSize" rows="4" cols="40"></textarea>
				<h4>【写真】</h4>
				<p><img id="picture"></p>
				<input type="file" name="room_image" accept="image/jpeg,image/png">
				<h4>【備考】</h4>
				<textarea name="explanation" rows="4" cols="40"></textarea>


				<h4>【料金】</h4>
				<textarea name="price" rows="4" cols="40"></textarea>
			<!-- <h1>【後で消す】ここより下は新しく追加された要素</h1> -->
			<!-- 　新しく追加された要素 ここから -->
 			<h4>【最大人数】</h4>
			<input type="text" name="studio_max_people" value=""></input>
			<h4>【鏡】</h4>
			<textarea name="studio_mirror" rows="4" cols="40"></textarea>
			<h4>【ジャンル】</h4>
			<p class="genre_list">
				<span class="genre">
					<input type="checkbox" name="genre" value="1">
					<span class="genre_name">ストリートダンス</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="2">
					<span class="genre_name">ブレイクダンス</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="3">
					<span class="genre_name">ジャズ</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="4">
					<span class="genre_name">バレエ</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="5">
					<span class="genre_name">タップ</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="6">
					<span class="genre_name">フラメンコ</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="7">
					<span class="genre_name">社交ダンス</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="8">
					<span class="genre_name">フラダンス</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="9">
					<span class="genre_name">ベリーダンス</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="10">
					<span class="genre_name">ポールダンス</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="11">
					<span class="genre_name">演劇</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="12">
					<span class="genre_name">歌</span>
				</span>
				<span class="genre">
					<input type="checkbox" name="genre" value="13">
					<span class="genre_name">楽器演奏</span>
				</span>
			</p>
			<h4>【床材】</h4>
			<select>
				<option value="flooring">フローリング</option>
				<option value="linoleum">リノリウム</option>
			</select>
			<h4>【スピーカー】</h4>
			<textarea name="studio_speaker" rows="4" cols="40"></textarea>
			<h4>【ミキサー】</h4>
			<textarea name="studio_mixer" rows="4" cols="40"></textarea>
			<h4>【CD】</h4>
			<input type="radio" name="studio_cd" value="">可
			<input type="radio" name="studio_cd" value="" checked>不可
			<h4>【MD】</h4>
			<input type="radio" name="studio_md" value="">可
			<input type="radio" name="studio_md" value="" checked>不可
			<h4>【mp3】</h4>
			<input type="radio" name="studio_mp3" value="">可
			<input type="radio" name="studio_mp3" value="" checked>不可
			<h4>【その他音響】</h4>
			<textarea name="studio_other_acoustic" rows="4" cols="40"></textarea>
			<h4>【照明調光】</h4>
			<input type="radio" name="studio_illumination" value="">有
			<input type="radio" name="studio_illumination" value="" checked>無
			<h4>【Wi-Fi】</h4>
			<input type="radio" name="studio_illumination" value="">有
			<input type="radio" name="studio_illumination" value="" checked>無
			<h4>【写真】</h4>
			<p>
				<img id="picture">
			</p>
			<input type="file" name="reference_image" accept="image/jpeg,image/png">
			<h4>【特徴】</h4>
			<textarea name="studio_feature" rows="4" cols="40"></textarea>
			<!-- 　新しく追加された要素 ここまで -->
				
			</form>
		    <!-- キャンセルボタン -->
		    <a class="remodal-cancel" href="/studio_area" data-remodal-action="cancel">戻る</a>
		    <!-- OKボタン -->
		    <a href="javascript:void(0)" class="remodal-confirm" style="display:inline-block">登録</a>
		</div>
	</div>
</div>